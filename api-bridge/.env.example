# Database
DATABASE_URL=postgresql://user:password@host:5432/database_name

# API Bridge
PORT=3001
API_BRIDGE_KEY=your-secret-api-key-here-change-this

# JWT Secrets - Generate with: openssl rand -hex 32
JWT_SECRET=
JWT_REFRESH_SECRET=

# Vercel Domain (for CORS)
VERCEL_DOMAIN=https://carmen-job-search.vercel.app

# Allowed origins (comma-separated list for CORS)
ALLOWED_ORIGINS=https://carmen-job-search.vercel.app,https://carmen-job-search-git-*.vercel.app

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Brevo SMTP
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your-brevo-smtp-user
BREVO_SMTP_PASSWORD=your-brevo-password
BREVO_API_KEY=your-brevo-api-key

# Encryption key for sensitive data - Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Environment
NODE_ENV=production
